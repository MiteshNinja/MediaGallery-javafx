                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Label fx:id="status" style="-fx-padding: 0 0 0 5;" text="Label">
                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>
            </Label>
        </GridPane>
    </bottom>
    <center>
        <StackPane fx:id="content" minHeight="0.0" minWidth="0.0" prefHeight="150.0" prefWidth="200.0"
                   BorderPane.alignment="CENTER"/>
    </center>
